		<value condition="!String.IsEmpty(Fanart.Image)">$INFO[Fanart.Image]</value>
		<value condition="Container.Content(movies) + !String.IsEmpty(Fanart.Image) + Skin.HasSetting(ShowMovieWallFanart)">$INFO[Fanart.Image]</value>
		<value condition="Container.Content(Seasons) | String.Contains(Container.FolderPath,season) | String.Contains(Container.FolderPath,$LOCALIZE[20373])">$INFO[Fanart.Image]</value>
		<value condition="Container.Content(movies) + IsEmpty(Fanart.Image) + Skin.HasSetting(ShowMovieWallFanart)">$INFO[ListItem.Path]fanart.jpg</value>
		<value condition="String.Contains(ListItem.Thumb,IMAGE:)">$INFO[ListItem.Path]fanart.jpg</value>
