	<variable name="PosterThumb">
		<value condition="Skin.HasSetting(EnableAnimatedPosters) + [Container.Content(Movies) | Container.Content(Sets)] + !String.IsEmpty(ListItem.Art(animatedposter)) + [Control.IsVisible(52) | Control.IsVisible(53) | Control.IsVisible(54) | Control.IsVisible(66) | Control.IsVisible(69) | Control.IsVisible(75) | Control.IsVisible(65) | Control.IsVisible(588)]">$INFO[ListItem.Art(animatedposter)]</value>
